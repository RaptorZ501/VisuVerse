{% extends 'base.html.twig' %}
		{% block body %}
			{% include "reusable/header.html.twig" %}
			<main class="bgMain mainAjout center">
				<div class="containerAjout">
				
				{{ form_start(form, {'attr': {'class': 'formTab'}})}}
					<div class="card text-white bg-dark" style="width: 18rem;">
					  	<div class="imgTab card-img-top center" style="border-bottom: 3px solid white;">
								<div class="backImg center" id="recup">
									{{ form_row(form.imageFile, {'label': label, 'attr': {'class': 'image-file'}}) }}
									<img src="" alt="" id="preview" style="width:150%; height:72%; 
																position:absolute; left:102%; top: -2%;
																border: 3px solid white;">
								</div>
								
						</div>
					  <div class="card-body">		
						{{form_label(form.title, 'Titre de la description', {'attr': {'class': 'colorDefault'}}) }}
						{{ form_widget(form.title, {
								'attr': {'placeholder': 'Le titre ne doit pas dépasser les 50 caractères', 
						}})}}
						<div class="error" style="padding-right: 20px">
							{{ form_errors(form.title)}}
						</div>
							{{form_label(form.description, 'Description du projet', {'attr': {'class': 'colorDefault'}}) }}
							{{ form_widget(form.description, {
									'attr': {'placeholder': 'Entrer une description', 
									'class': 'DescriptionInput textTab'
							}})}}
					    <button class="btn btn-success m-4">{{ button_label|default('Valider') }}</button>
					  </div>
					</div>
				{{ form_end(form) }}
				</div>
			</main>
		{% endblock %}
