{% extends 'base.html.twig' %}

{% block title %}Onglet index{% endblock %}

{% block body %}
    <h1>Onglet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title_onglet</th>
                <th>Img</th>
                <th>Title</th>
                <th>Description</th>
                <th>Liens</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for onglet in onglets %}
            <tr>
                <td>{{ onglet.id }}</td>
                <td>{{ onglet.TitleOnglet }}</td>
                <td>{{ onglet.img }}</td>
                <td>{{ onglet.title }}</td>
                <td>{{ onglet.description }}</td>
                <td>{{ onglet.Liens }}</td>
                <td>
                    <a href="{{ path('app_onglet_show', {'id': onglet.id}) }}">show</a>
                    <a href="{{ path('app_onglet_edit', {'id': onglet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_onglet_new') }}">Create new</a>
{% endblock %}
