{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('app_login') }}" method="post">
    <div class="container-conn">
        <div class="formConnect">
            <label for="pseudo">Email</label>
            <input type="text" id="pseudo" name="pseudo" value="{{ last_username }}"/>

            <label for="password">Password</label>
            <input type="password" id="password" name="password"/>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <input type="hidden" name="_target_path" value="{{ path('app_index')}}"/>
            <button type="submit" class="btn btn-success mt-5" id="Co">Connexion</button>
        </div>
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}
